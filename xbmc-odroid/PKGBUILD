# Maintainer: Michael Unterkalmsteiner <miciu@gmx.de>
pkgname=xbmc-odroid
_gitname='xbmc'
pkgver=12.2
pkgrel=1
pkgdesc="xbmc"
arch=(armv7h)
url="http://xbmc.org"
license=('GPL' 'LGPL')
depends=('hicolor-icon-theme' 'fribidi' 'lzo2' 'libtiff' 'libva' 'libpng' 'libcdio' 'yajl' 'libmariadbclient' 'libjpeg-turbo' 'libsamplerate' 'libssh' 'libmicrohttpd' 'python2' 'libass' 'libmpeg2' 'libmad' 'libmodplug' 'jasper' 'rtmpdump' 'unzip' 'xorg-xdpyinfo' 'afpfs-ng' 'libshairport' 'avahi' 'bluez-libs' 'tinyxml' 'libplist' 'swig' 'taglib' 'libxslt' 'sdl_image' 'sdl_mixer')
makedepends=('boost' 'cmake' 'gperf' 'nasm' 'zip' 'udisks' 'upower' 'git' 'autoconf' 'java-environment')
optdepends=(
  'lirc: remote controller support'
  'udisks: automount external drives'
  'upower: used to trigger power management functionality'
  'unrar: access compressed files without unpacking them')
#options=('!strip')
source=("$_gitname::git://github.com/mdrjr/xbmc.git#branch=Frodo")
md5sums=('SKIP')

build() {
	cd ${_gitname}

	git checkout b9097b34123bc0bb60aa22636e9d3f537ef996b5

	# More fixes:
	# - in Makefile, search LIBS and put -lX11 before all other libs
	# - replace /lib/udev/rules.d/50-udev-default.rules with http://builder.mdrjr.net/tools/udev_default_xubuntu_update

	msg2 "Bootstrapping XBMC"
	./bootstrap

	msg2 "Configuring XBMC"
	export PYTHON_VERSION=2
	export FFMPEG_CFLAGS=" \
                -march=armv7-a \
                -mfloat-abi=hard \
                -mfpu=neon \
                -ftree-vectorize \
                -mvectorize-with-neon-quad \
                -ffast-math \
                -mcpu=cortex-a9 \
                -mtune=cortex-9 \
                -O3 \
                -pipe \
                -fstack-protector --param=ssp-buffer-size=4 \
                -D_FORTIFY_SOURCE=2"
	export CFLAGS=" \
                -march=armv7-a \
                -mfloat-abi=hard \
                -mfpu=neon \
                -ftree-vectorize \
                -mvectorize-with-neon-quad \
                -ffast-math \
                -mcpu=cortex-a9 \
                -mtune=cortex-a9 \
                -O3 \
                -pipe \
                -fstack-protector --param=ssp-buffer-size=4 \
                -D_FORTIFY_SOURCE=2"

	./configure --prefix=/usr --exec_prefix=/usr \
		--enable-alsa \
		--enable-external-libraries \
		--enable-exynos4 \
		--enable-gles \
		--enable-neon \
		--enable-non-free \
		--enable-optimizations \
		--enable-sdl \
		--enable-texturepacker \
		--disable-afpclient \
		--disable-airplay \
		--disable-airtunes \
		--disable-ccache \
		--disable-crystalhd \
		--disable-debug \
		--disable-dvdcss \
		--disable-external-ffmpeg \
		--disable-gl \
		--disable-joystick \
		--disable-mid \
		--disable-nfs \
		--disable-openmax \
		--disable-optical-drive \
		--disable-projectm \
		--disable-pulse \
		--disable-rsxs \
		--disable-samba \
		--disable-vdpau \
		--disable-vaapi \
		--with-platform=samsung-exynos \
		--with-cpu=cortex-a9

	msg2 "Running make"
	make 
}


package() {
	cd ${_gitname}
	make DESTDIR="$pkgdir" install

	sed -i -e 's/python/python2/g' ${pkgdir}/usr/bin/xbmc
}

